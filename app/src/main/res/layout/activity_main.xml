<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="161dp"
        android:layout_height="172dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.083"
        app:srcCompat="@drawable/security" />

    <Button
        android:id="@+id/btnPeta"
        android:layout_width="131dp"
        android:layout_height="48dp"
        android:background="@drawable/round_blue"
        android:fontFamily="sans-serif"
        android:text="Peta"
        android:textSize="16sp"
        app:backgroundTint="@color/navy"
        app:icon="@drawable/ic_location_searching"
        app:iconTint="@color/brown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.051" />

    <Button
        android:id="@+id/btnTeman"
        android:layout_width="145dp"
        android:layout_height="48dp"
        android:background="@drawable/round_blue"
        android:fontFamily="sans-serif"
        android:text="Teman"
        android:textSize="16sp"
        app:backgroundTint="@color/navy"
        app:icon="@drawable/ic_people"
        app:iconTint="@color/brown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.838"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.051" />

    <Button
        android:id="@+id/btnCall"
        android:layout_width="147dp"
        android:layout_height="58dp"
        android:fontFamily="sans-serif"
        android:text="Panggil Polisi"
        android:textStyle="bold"
        android:textSize="12sp"
        app:backgroundTint="@color/navy"
        app:icon="@drawable/ic_call"
        app:iconTint="@color/brown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.224" />

    <Button
        android:id="@+id/button"
        android:layout_width="274dp"
        android:layout_height="259dp"
        android:background="@drawable/redbutton"
        android:text="Emergency
                        button"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.906" />

</androidx.constraintlayout.widget.ConstraintLayout>